<footer class="footer pt-5 mt-5">
  <div class="container">
    <div class="pt-3 pb-5">
      <ul class="list-inline mb-0 text-center">
        <li class="list-inline-item">&copy; <%= date(new Date(), 'YYYY') %> <%= config.title || config.author %></li>
        <% if (theme.beian.enable){ %>
          <li class="list-inline-item">
            <%if (theme.beian.url){ %>
              <a href="<%- url_for(theme.beian.url) %>" target="_blank"><%- theme.beian.number %></a>
              <% } else { %>
                <%- theme.beian.number %>
            <% } %>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</footer>